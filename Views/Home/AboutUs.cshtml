@{
    ViewData["Title"] = "Abou Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    /* About Us Section */
    .about-us {
        background-image: url('@Url.Content("~/image/Chair 9.jpg")');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        width: 100%fit-content;
        height: 400px;
        padding: 50px 0;
        margin-top: 100px;
    }

        .about-us h2 {
            font-size: 36px;
            font-weight: bold;
            color: #7c0101;
            text-align: center;
            margin-bottom: 30px;
        }
    /* Services Section */
    .services {
        background: #fff;
        padding: 50px 0;
    }

        .services h2 {
            text-align: center;
            font-size: 36px;
            color: #7c0101;
            margin-bottom: 30px;
        }

    .service-card {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
        transition: 0.3s ease-in-out;
    }

        .service-card:hover {
            transform: translateY(-10px);
        }

        .service-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .service-card .service-content {
            padding: 20px;
            text-align: center;
        }

            .service-card .service-content h5 {
                font-size: 22px;
                color: #7c0101;
                margin-bottom: 10px;
            }

    /* Image Gallery */
    .gallery {
        background: #f4f4f4;
        padding: 50px 0;
    }

        .gallery h2 {
            text-align: center;
            font-size: 36px;
            color: #8b4513;
            margin-bottom: 30px;
        }

        .gallery .row img {
            border-radius: 10px;
            transition: transform 0.3s ease-in-out;
        }

            .gallery .row img:hover {
                transform: scale(1.1);
            }

    /* Testimonials Section */
    .testimonials {
        background: #fff;
        padding: 50px 0;
    }

        .testimonials h2 {
            text-align: center;
            font-size: 36px;
            color: #7c0101;
            margin-bottom: 30px;
        }

    .testimonial-card {
        background: #f8f8f8;
        border-radius: 10px;
        padding: 30px;
        text-align: center;
        margin-bottom: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .testimonial-card:hover {
            transform: translateY(-10px);
        }

        .testimonial-card img {
            border-radius: 50%;
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
        }

    /* Team Section */
    .team {
        background: #f4f4f4;
        padding: 50px 0;
    }

        .team h2 {
            text-align: center;
            font-size: 36px;
            color: #7c0101;
            margin-bottom: 30px;
        }

    .team-member {
        text-align: center;
        margin-bottom: 30px;
    }

        .team-member img {
            border-radius: 50%;
            width: 150px;
            height: 150px;
            margin-bottom: 20px;
            transition: transform 0.3s ease-in-out;
        }

            .team-member img:hover {
                transform: scale(1.1);
            }

        .team-member h4 {
            font-size: 24px;
            color: #7c0101;
        }

        .team-member p {
            color: #555;
        }

    /* Map Section */
    .map-section {
        background: #f4f4f4;
        padding: 50px 0;
    }

        .map-section iframe {
            width: 100%;
            height: 450px;
            border: none;
            border-radius: 10px;
        }

</style>
     <!-- About Us Section -->
    <div class="about-us">
        <div class="container" style="color: rgb(253, 249, 249); font-size: 27px">
            <h2>About Us</h2>
        <p style="text-align: center; font-size:22px">
                Al-Fannia Furniture & Decor is a leading brand in the furniture
                industry. Our mission is to provide high-quality furniture that
                combines style and functionality. Our team is dedicated to creating
                pieces that enhance the comfort and aesthetic of any living space.
            </p>
        </div>
    </div>

    <!-- Services Section -->
    <div class="services">
        <div class="container">
            <h2>Our Services</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="service-card">
                        <img src="~/image/Service 1.jpg" alt="Service 1" />
                        <div class="service-content">
                            <h5>Custom Furniture Design</h5>
                            <p>Tailored designs that fit your unique style and space.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="service-card">
                        <img src="~/image/Service 2.jpg" alt="Service 2" />
                        <div class="service-content">
                            <h5>Interior Design Consultation</h5>
                            <p>
                                Expert advice to create beautiful and functional interiors.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="service-card">
                        <img src="~/image/Service 3.jpg" alt="Service 3" />
                        <div class="service-content">
                            <h5>Furniture Restoration</h5>
                            <p>
                                Restoring the beauty and functionality of your vintage
                                furniture.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gallery Section -->
    <div class="gallery d-flex justify-content-center align-items-center"
         style="height: 50vh">
        <div class="container text-center">
            <h2>Gallery</h2>
            <div class="row">
                <div class="col-md-4">
                    <img src="~/image/Gallery Image 1.jpg"
                         class="img-fluid"
                         alt="Gallery Image 1" />
                </div>
                <div class="col-md-4">
                    <img src="~/image/Gallery Image 2.jpg"
                         class="img-fluid"
                         alt="Gallery Image 2" />
                </div>
                <div class="col-md-4">
                    <img src="~/image/Gallery Image 3.jpg"
                         class="img-fluid"
                         alt="Gallery Image 3" />
                </div>
            </div>
        </div>
    </div>

    <!-- Testimonials Section -->
    <div class="testimonials">
        <div class="container">
            <h2>What Our Clients Say</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="testimonial-card">
                        <img src="~/image/Client 1.jpg"
                             alt="Client 1"
                             style="width: 150px; height: 150px" />
                        <p>
                            "The quality of the furniture is amazing! I couldn't be happier
                            with my purchase."
                        </p>
                        <h5>John Doe</h5>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="testimonial-card">
                        <img src="~/image/Client 2.jpg"
                             alt="Client 2"
                             style="width: 150px; height: 150px" />
                        <p>
                            "Great service and the designs are just beautiful. Highly
                            recommend!"
                        </p>
                        <h5>Jane Smith</h5>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="testimonial-card">
                        <img src="~/image/Client 3.jpg"
                             alt="Client 3"
                             style="width: 150px; height: 150px" />
                        <p>
                            "Their team helped me design my dream home. Exceptional quality
                            and service!"
                        </p>
                        <h5>Sarah Lee</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Map Section -->
    <div class="map-section style="margin-bottom:120px"">
        <div class="container">
            <h2>Our Location</h2>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3390.564084287037!2d34.46832921501148!3d31.5!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1502e881a54007f7%3A0x6f0f1d8c7d5c075d!2z2KzYsdmI2KfYqSDYp9mE2YXZ!5e0!3m2!1sar!2sus!4v1667051104595!5m2!1sar!2sus"
                    width="100%"
                    height="450"
                    frameborder="0"
                    style="border: 0; border-radius: 10px"
                    allowfullscreen=""
                    aria-hidden="false"
                    tabindex="0"></iframe>
        </div>
    </div>


    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            console.log(
                "Bootstrap status:",
                typeof bootstrap !== "undefined" ? "Loaded" : "Not loaded"
            );

            const navbarToggler = document.querySelector(".navbar-toggler");
            const navbarCollapse = document.querySelector(".navbar-collapse");

            navbarToggler.addEventListener("click", function () {
                navbarCollapse.classList.toggle("show");
            });
        });
    </script>


