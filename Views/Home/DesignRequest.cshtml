@{
    ViewData["Title"] = "Design Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Furniture System - Design Request</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/CSS/DesignRequest.css" />
    <link rel="stylesheet" href="~/CSS/site.css" />


</head>

<body>
  

    <div class="container d-flex flex-column justify-content-center align-items-center"
         style="flex-grow: 1; margin-top: 120px; margin-bottom:120px">
        <div class="form-container">
            <h3 class="text-center">Design request</h3>
            <form>
                <div class="row mb-3">
                    <div class="col">
                        <input type="text"
                               class="form-control"
                               placeholder="First name" />
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Last name" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <input type="tel"
                               class="form-control"
                               placeholder="Mobile number" />
                    </div>
                    <div class="col">
                        <input type="email" class="form-control" placeholder="Email" />
                    </div>
                </div>
                <!-- سطر زر رفع الملف -->
                <div class="row mb-3">
                    <div class="col">
                        <button type="button"
                                class="btn btn-custom w-100"
                                onclick="document.getElementById('fileInput').click()">
                            Upload File/Image
                        </button>
                        <input type="file" id="fileInput" style="display: none" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Width" />
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Height" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Color" />
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Fabric" />
                    </div>
                </div>
                <button type="submit"
                        class="btn btn-custom w-100"
                        style="background-color: #7c0101">
                    Send
                </button>
            </form>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // التأكد من تحميل المكتبات
            console.log(
                "Bootstrap status:",
                typeof bootstrap !== "undefined" ? "Loaded" : "Not loaded"
            );

            // حل بديل للقائمة
            const navbarToggler = document.querySelector(".navbar-toggler");
            const navbarCollapse = document.querySelector(".navbar-collapse");

            navbarToggler.addEventListener("click", function () {
                navbarCollapse.classList.toggle("show");
            });
        });
    </script>
</body>
</html>
