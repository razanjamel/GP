@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f5f5;
            font-family: "Segoe UI", sans-serif;
        }

        .sidebar {
            height: 100vh;
            background-color: #7c0101;
            color: white;
            padding-top: 30px;
            border-top-right-radius: 40px;
            border-bottom-right-radius: 40px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 15px 25px;
                font-size: 16px;
                border-radius: 0 20px 20px 0;
                margin-bottom: 5px;
            }

                .sidebar a:hover {
                    background-color: #8c0c0c;
                }

                .sidebar a.active {
                    background-color: #fff;
                    color: #7c0101;
                    font-weight: bold;
                    font-size: 18px;
                    box-shadow: inset 3px 0px 0px #b95757;
                }

            .sidebar .text-center img {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                object-fit: cover;
                border: 3px solid #fff;
            }

        .dashboard-content {
            padding: 40px;
        }
    </style>
</head>
<body>
    <div class="container-fluid px-0">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <div class="text-center mb-4">
                    <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Admin" />
                    <p class="mt-2">Admin</p>
                </div>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                   class="@(currentController == "Dashboard" ? "active" : "")">Dashboard</a>
                <a asp-area="Admin" asp-controller="Category" asp-action="Index"
                   class="@(currentController == "Category" ? "active" : "")">Categories</a>
                <a asp-area="Admin" asp-controller="Product" asp-action="Index"
                   class="@(currentController == "Product" ? "active" : "")">Products</a>
                <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index"
                   class="@(currentController == "UserManagement" ? "active" : "")">User Management</a>
                <a asp-area="Admin" asp-controller="Orders" asp-action="Index"
                   class="@(currentController == "Orders" ? "active" : "")">Orders Management</a>
                <a asp-area="Admin" asp-controller="DesignRequest" asp-action="Index"
                   class="@(currentController == "DesignRequest" ? "active" : "")">Design Request</a>

                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                    <button type="submit" class="btn btn-danger w-100 mt-2">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 dashboard-content">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
