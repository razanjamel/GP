
@model GP.Models.Product
@{
ViewData["Title"] = "Edit Product";
Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style> 
    .custom-card { border: none; border-radius: 15px; overflow: hidden; transition: transform 0.3s ease, box-shadow 0.3s ease; background: linear-gradient(135deg, #ffffff 0%, #fef6e4 100%); }
    .custom-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15); }
    .btn-custom { background-color: #7c0101; border: none; color: #fff; transition: background-color 0.3s ease, box-shadow 0.3s ease; border-radius: 30px; }
    .btn-custom:hover { background-color: #f8b400; box-shadow: 0 8px 15px rgba(248, 180, 0, 0.4); } 
    .form-control { border-radius: 30px; box-shadow: none; transition: box-shadow 0.3s ease; } 
    .form-control:focus { box-shadow: 0 0 5px rgba(248, 180, 0, 0.4); } 
    label { font-weight: 600; color: #555; margin-bottom: 0; } 
    .form-group { margin-bottom: 1.5rem; } 
    .validation-message { color: red; font-size: 0.9rem; } 
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8"> 
            <div class="card custom-card p-4 shadow">
                <h3 class="text-center mb-4 text-primary">Edit Product</h3>

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Name">Product Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Price" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AvailableColors">Available Colors</label>
                        <input asp-for="AvailableColors" class="form-control" placeholder="e.g. Red, Blue, White" />
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId">Category</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                            <option disabled selected>-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label>Product Image</label><br />
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Current Image" width="120" class="mb-2" />
                        }
                        <input type="file" name="Image" class="form-control" />
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-custom px-5">Update</button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




        